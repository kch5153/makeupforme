<html lang="en">
  <head>
    <link rel="stylesheet" type="text/css" href="/style.css">
    <title><%= name%>'s MakeUpForMe'</title>
    <meta name="description" content="A cool thing made with Glitch">
    <link id="favicon" rel="icon" href="https://glitch.com/edit/favicon-app.ico" type="image/x-icon">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- import the webpage's stylesheet -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
  </head>
  
  <body id = "body" class = "container">
  <div class= "container">
    
    <h1 class="display-1 text-center"><small class="text-muted">my</small>MakeUpForMe</h1>
    <div class = "row">
      <form >
            <button formaction="/feed" type="submit" formmethod="get" class="btn btn-secondary">Back to Feed</button>
      </form>
    </div>
    
    <div class="row justify-content-left" >
      <div class="col-med-4" >
        <img src='<%= image %>' height=200rem width=200rem class="rounded-circle" class="img-responsive"/>
      </div>
      <div class = "col-med-8 ml-3" >
        <h2 class="display-3"><%= name%></h2>
        <form >
          <button formaction="/otherProfile/<%= pId %>" type="submit" formmethod="post" class="btn btn-secondary">Follow</button>
        </form>
        <p><%= city%>, <%= state%><br></p>
        <p><%= bio%></p>
      </div>
    </div>
      
    <div class="row justify-content-center" >
    <span class="display-3"><small class="text-muted" ></small>Looks</span>
    </div>

    
    <% if (looks) { %>
    <% looks.forEach(function(look){ %>
    <div class"row justify-content-center">
      
    <div class="card m-5 w-50" >
      <img src='<%= look.image %>' class="card-img-top "  alt="...">
      <div class="card-body">
        <ul class="list-inline">
        <li>
        <%look.tags.forEach(function(tag){ %>
          <% if (tag !== "") { %>
            #<%= tag%>
          <% } %>

        <% })%>
        </li>
        </ul>
        <ul class="list-inline">
        <li>
        <%look.products.forEach(function(p){ %>
          <% if (p !== "") { %>
          <a href=https://makeup-api.herokuapp.com/api/v1/products/<%- JSON.parse(p).id%>><%- JSON.parse(p).name %></a>
            <% } %>
          
        <% });%>   

           
        </li>
        </ul>
    
          </div>
          </div>
  </div>
   <% }); %> 
    
    
    <% } else { %>
        <%= name%> has no looks
    <% } %>
    
    </div>
    <!-- include the Glitch button to show what the webpage is about and
to make it easier for folks to view source and remix -->
    <div class="glitchButton" style="position:fixed;top:20px;right:20px;"></div>
    <script src="https://button.glitch.me/button.js"></script>
  </body>
</html>